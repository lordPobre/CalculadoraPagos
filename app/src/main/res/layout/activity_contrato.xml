<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ContratoActivity">

    <!-- EditText para ingresar el sueldo bruto -->
    <EditText
        android:id="@+id/sueldoBrutoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sueldo Bruto"
        android:inputType="numberDecimal" />
    <!-- Botón para calcular el contrato -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular Contrato"
        android:onClick="calcularContrato" />
    <!-- TextView para mostrar el resultado del cálculo -->
    <TextView
        android:id="@+id/resultadoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="16dp" />
    <!-- Botón para volver a la pantalla principal -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver a la pantalla principal"
        android:onClick="volverPrincipal" />

</LinearLayout>

